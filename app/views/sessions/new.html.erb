<%= form_for(@fan, url: login_path, method: :post) do |f| %>
    <div class="form-group">
    <%= f.label "Username"%>
    <%= f.text_field :name %>
    </div>
  
    <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>

    <%= f.submit "Sign in", class: 'btn btn-warning' %>
  <% end %>

  