<%= form_for @group do |f| %>
    <div class="form-group">
    <%= f.label "Group Name" %>
    <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group form-check">
    <%= f.label "Genres", class: "form-check-label" %>
    <%= f.collection_check_boxes :genre_ids, @genres, :id, :name, include_hidden: false%>
    </div>

    <%= f.submit class: "btn btn-lg btn-info" %>
<% end %>

