<h3>Group Show Page</h3>

<h1>Group Name:</h1>
<h2><%= @group.name %></h2>

<h4>Group Description:</h4>
<p><%= @group.description %></p>

<h1>Group Genres:</h1>
<% @group.genres.each do |genre| %>
    <p> <%= genre.name %> </p>
<% end %>

<h1>Group Songs:</h1>
<% @group.songs.each do |song| %>
    <p> <%= song.title %> </p>
<% end %>

<h1>Group Comments:</h1>
<% @group.comments.each do |comment| %>
    <p> <%= comment.title %> </p>
    <p> <%= comment.content %> </p>
<% end %>

